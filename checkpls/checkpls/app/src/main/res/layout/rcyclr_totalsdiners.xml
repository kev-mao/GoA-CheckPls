<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout

        android:id="@+id/view1"
        android:layout_width="352dp"
        android:layout_height="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalsname"
                android:layout_width="170dp"
                android:layout_height="41dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Travis"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/totalsprice"
                android:layout_width="85dp"
                android:layout_height="33dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="$100"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/view_details"
                android:layout_width="48dp"
                android:layout_height="51dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:rotationX="180"
                android:textAlignment="center"
                app:srcCompat="@drawable/keyboard_arrow_left" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"

            android:visibility="gone">


            <ImageView
                android:id="@+id/greenH"
                android:layout_width="352dp"
                android:layout_height="116dp"
                android:background="@drawable/green_highlight" />

            <TextView
                android:layout_width="105dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Subtotal:"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="46dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Tax:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tipPercent"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="78dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Tips:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/diner_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="264dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="$100"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/diner_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diner_subtotal"
                android:layout_marginStart="264dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="$100"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/diner_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diner_tax"
                android:layout_marginStart="264dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="$100"
                android:textSize="14dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dineralldishes"
                android:layout_width="351dp"
                android:layout_height="138dp"
                android:layout_below="@id/greenH"
                android:layout_marginTop="10dp" />

        </RelativeLayout>
        <View
            android:id="@+id/div2"
            android:layout_width="351dp"
            android:layout_height="25dp"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:id="@+id/div"
        android:layout_width="351dp"
        android:layout_height="2dp"

        android:background="#A9D6D3" />

</LinearLayout>

</RelativeLayout>